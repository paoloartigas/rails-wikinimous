

<div class="card">
  <div class="card-body">
    <h1 class="card-title"><%= @article.title %></h1>
    <p class="card-text"><%= @article.content %></p>
  </div>
</div>

<div class="mt-4 d-flex gap-2">
  <%= link_to "← Back to Articles", articles_path, class: "btn btn-outline-secondary" %>
  <%= link_to "Edit", edit_article_path, class: "btn btn-warning" %>
  <%= link_to "Delete", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>
